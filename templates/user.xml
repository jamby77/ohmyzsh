<templateSet group="user">
  <template name="clog" value="console.log($VAR$);&#10;$END$" description="console log" toReformat="true" toShortenFQNames="true">
    <variable name="VAR" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_SCRIPT" value="true" />
    </context>
  </template>
  <template name="ttest" value="$this-&gt;tester-&gt;$END$" description="tester shortcut" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="PHP Statement" value="true" />
      <option name="PHP Expression" value="true" />
    </context>
  </template>
  <template name="ifn" value="if (null === $VAR$) {&#10;&#9;$CODE$;&#10;}&#10;$END$" description="if null" toReformat="true" toShortenFQNames="true">
    <variable name="VAR" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="CODE" expression="time()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP Statement" value="true" />
      <option name="PHP Expression" value="true" />
    </context>
  </template>
  <template name="if" value="if($CONDITION$) {&#10;    $CONDITION_CODE$&#10;}&#10;$END$" description="if statement" toReformat="true" toShortenFQNames="true">
    <variable name="CONDITION" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="CONDITION_CODE" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP Statement" value="true" />
      <option name="PHP Expression" value="true" />
    </context>
  </template>
</templateSet>