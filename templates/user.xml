<templateSet group="user">
  <template name="clog" value="console.log($VAR$);&#10;$END$" description="console log" toReformat="true" toShortenFQNames="true">
    <variable name="VAR" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_SCRIPT" value="true" />
    </context>
  </template>
  <template name="ttest" value="$this-&gt;tester-&gt;$END$" description="tester shortcut" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="PHP Statement" value="true" />
      <option name="PHP Expression" value="true" />
    </context>
  </template>
</templateSet>